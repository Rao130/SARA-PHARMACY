{
  "name": "sara-pharmacy-backend",
  "version": "1.0.0",
  "description": "Backend for Sara Pharmacy Application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:dev": "set NODE_ENV=development && node --experimental-modules server.js",
    "start:windows": "set NODE_ENV=production && node server.js",
    "dev": "nodemon --experimental-modules server.js",
    "build": "npm install --only=production",
    "test": "echo \"Error: no test specified\" && exit 1",
