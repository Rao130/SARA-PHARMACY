    "seed-medicines": "node scripts/seedMedicines.js",
    "db:setup": "npm run create-admin && npm run seed-medicines"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
